{
	"name": "wikidata-entity-reader",
	"version": "3.0.0",
	"description": "read information of wikidata entities in a simpler way",
	"keywords": [
		"wikidata",
		"entity"
	],
	"license": "MIT",
	"repository": "EdJoPaTo/wikidata-entity-reader",
	"author": {
		"name": "EdJoPaTo",
		"email": "wikibase-npm-package@edjopato.de",
		"url": "https://edjopato.de"
	},
	"scripts": {
		"build": "del-cli dist && tsc",
		"prepack": "npm run build",
		"test": "tsc --sourceMap && xo && ava"
	},
	"type": "module",
	"engines": {
		"node": ">=14"
	},
	"dependencies": {
		"wikibase-sdk": "^9.0.5"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.0",
		"@types/node": "^14.18.21",
		"ava": "^5.0.1",
		"del-cli": "^5.0.0",
		"typescript": "^4.2.3",
		"xo": "^0.53.0"
	},
	"files": [
		"dist/source",
		"!*.test.*"
	],
	"main": "./dist/source/index.js",
	"types": "./dist/source/index.d.ts",
	"nyc": {
		"all": true,
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"rules": {
			"@typescript-eslint/prefer-readonly-parameter-types": "error",
			"ava/no-ignored-test-files": "off"
		},
		"overrides": [
			{
				"files": [
					"**/*.test.*",
					"test/**/*.*"
				],
				"rules": {
					"@typescript-eslint/prefer-readonly-parameter-types": "off"
				}
			}
		]
	}
}
