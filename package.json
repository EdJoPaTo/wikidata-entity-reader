{
	"name": "wikidata-entity-reader",
	"version": "2.0.0",
	"description": "read information of wikidata entities in a simpler way",
	"license": "MIT",
	"repository": "EdJoPaTo/wikidata-entity-reader",
	"author": {
		"name": "EdJoPaTo",
		"email": "wikibase-npm-package@edjopato.de",
		"url": "https://edjopato.de"
	},
	"engines": {
		"node": ">=10"
	},
	"scripts": {
		"build": "del-cli dist && tsc",
		"prepack": "npm run build",
		"test": "tsc --sourceMap && xo && nyc ava"
	},
	"main": "dist/source",
	"types": "dist/source",
	"files": [
		"dist/source",
		"!*.test.*"
	],
	"keywords": [
		"wikidata",
		"entity"
	],
	"dependencies": {
		"wikibase-sdk": "^7.4.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^0.8.0",
		"@types/node": "^13.13.5",
		"ava": "^3.8.1",
		"del-cli": "^3.0.0",
		"nyc": "^15.0.1",
		"ts-node": "^8.0.2",
		"typescript": "^4.1.5",
		"xo": "^0.30.0"
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"include": [
			"dist/source",
			"source"
		],
		"exclude": [
			"**/*.test.ts"
		],
		"all": true,
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"rules": {
			"ava/no-ignored-test-files": "off"
		},
		"overrides": [
			{
				"files": [
					"test/**/*"
				],
				"rules": {
					"@typescript-eslint/prefer-readonly-parameter-types": "off"
				}
			}
		]
	}
}
