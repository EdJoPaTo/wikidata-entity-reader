{
	"name": "wikidata-entity-reader",
	"version": "3.0.0",
	"description": "read information of wikidata entities in a simpler way",
	"keywords": [
		"wikidata",
		"entity"
	],
	"license": "MIT",
	"repository": "EdJoPaTo/wikidata-entity-reader",
	"author": {
		"name": "EdJoPaTo",
		"email": "wikibase-npm-package@edjopato.de",
		"url": "https://edjopato.de"
	},
	"scripts": {
		"build": "del-cli dist && tsc",
		"prepack": "npm run build",
		"test": "tsc --sourceMap && xo && nyc ava"
	},
	"type": "commonjs",
	"engines": {
		"node": ">=12"
	},
	"dependencies": {
		"wikibase-sdk": "^7.4.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^2.0.0",
		"@types/node": "^16.0.0",
		"ava": "^3.8.1",
		"del-cli": "^4.0.0",
		"nyc": "^15.0.1",
		"typescript": "^4.2.3",
		"xo": "^0.46.3"
	},
	"files": [
		"dist/source",
		"!*.test.*"
	],
	"main": "dist/source",
	"types": "dist/source",
	"nyc": {
		"all": true,
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"rules": {
			"@typescript-eslint/no-unsafe-call": "off",
			"@typescript-eslint/no-unsafe-member-access": "off",
			"@typescript-eslint/prefer-readonly-parameter-types": "error",
			"ava/no-ignored-test-files": "off",
			"unicorn/prefer-node-protocol": "off"
		},
		"overrides": [
			{
				"files": [
					"**/*.test.*",
					"test/**/*.*"
				],
				"rules": {
					"@typescript-eslint/prefer-readonly-parameter-types": "off"
				}
			}
		]
	}
}
