{
	"name": "wikidata-entity-reader",
	"version": "4.1.1",
	"description": "read information of wikidata entities in a simpler way",
	"keywords": [
		"wikidata",
		"entity"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/EdJoPaTo/wikidata-entity-reader.git"
	},
	"author": {
		"name": "EdJoPaTo",
		"email": "wikibase-npm-package@edjopato.de",
		"url": "https://edjopato.de"
	},
	"scripts": {
		"build": "del-cli dist && tsc",
		"prepack": "npm run build",
		"test": "tsc --sourceMap && xo && c8 --all node --test --enable-source-maps"
	},
	"type": "module",
	"engines": {
		"node": ">=14"
	},
	"dependencies": {
		"wikibase-sdk": "^9.2.2"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^7.0.0",
		"@types/node": "^22.10.1",
		"c8": "^10.1.2",
		"del-cli": "^6.0.0",
		"typescript": "^5.7.2",
		"xo": "^0.59.3"
	},
	"files": [
		"dist",
		"!*.test.*",
		"!test.*"
	],
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"xo": {
		"rules": {
			"@typescript-eslint/prefer-readonly-parameter-types": "warn"
		},
		"overrides": [
			{
				"files": [
					"**/*.test.*",
					"**/test.*"
				],
				"rules": {
					"@typescript-eslint/prefer-readonly-parameter-types": "off",
					"n/no-unsupported-features/es-syntax": "off",
					"n/no-unsupported-features/node-builtins": "off"
				}
			}
		]
	}
}
